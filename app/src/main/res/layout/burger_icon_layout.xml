<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/rippleCard"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:alpha="0.2"
            app:cardBackgroundColor="@color/md_grey_100"
            app:cardCornerRadius="10dp" />

        <RelativeLayout
            android:id="@+id/burgerIconRelativeLayout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/arrowCard1"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/md_grey_600"
                app:cardCornerRadius="0dp" />


            <android.support.v7.widget.CardView
                android:id="@+id/arrowCard2"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@id/arrowCard1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/md_grey_600"
                app:cardCornerRadius="0dp" />


            <android.support.v7.widget.CardView
                android:id="@+id/arrowCard3"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@id/arrowCard2"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/md_grey_600"
                app:cardCornerRadius="0dp" />
        </RelativeLayout>


    </FrameLayout>
</android.support.v7.widget.CardView>
