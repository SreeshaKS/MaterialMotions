<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/backgroundCalCardFrameLayout"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/md_grey_300"
            app:cardCornerRadius="20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/peg1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/md_grey_100"
                app:cardCornerRadius="10dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/peg2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/md_grey_100"
                app:cardCornerRadius="10dp" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@color/md_grey_300" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <FrameLayout
                android:id="@+id/topCalCardFrameLayout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="30dp">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/md_blue_500"
                    app:cardCornerRadius="20dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@color/md_blue_500" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/bottomCalCardFrameLayout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topCalCardFrameLayout"
                android:layout_gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/md_blue_500"
                    app:cardCornerRadius="20dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:background="@color/md_blue_500" />
            </FrameLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="31"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </FrameLayout>
</FrameLayout>